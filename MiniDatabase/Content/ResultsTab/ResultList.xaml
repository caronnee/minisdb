<parentTab:RecordableTab x:Class="MiniDatabase.Content.ResultsTab.ResultList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:parentTab="clr-namespace:MiniDatabase.Content.ResultsTab"
             xmlns:content="clr-namespace:MiniDatabase.Content"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="700" Loaded="InitEntries" xmlns:my="clr-namespace:MiniDatabase.Content.ResultsTab" x:Name="ShowList" ParentContent="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=content:ContentGeneric}}" >
    <StackPanel Name="LayoutRoot" Orientation="Vertical" HorizontalAlignment="Center" >
        <Label x:Name="lQuestion" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=parentTab:ResultList, AncestorLevel=1}, Path=Question}" />
        <DataGrid x:Name="EntriesContainer" AutoGenerateColumns="True" AutoGeneratedColumns="dataGrid1_AutoGeneratedColumns" >
            </DataGrid>
    </StackPanel>
</parentTab:RecordableTab>
